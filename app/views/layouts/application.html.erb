<!DOCTYPE html>
<html>
  <head>
    <title>Picshare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'bulma'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav">
      <div class="nav-left">
        <h2 class="title"><%= link_to "PicShare", root_path%></h2>
      </div>
      <% if current_user %>
        <div class="nav-item">
          <%= link_to current_user, current_user%>
        </div>
        <div class="nav-item">
          <%= link_to 'Log Out', :logout %>
        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to 'Log In', :login %>
        </div>
        <div class="nav-item">
        <%= link_to 'Sign Up', :signup %>
        </div>
      <% end %>
    </nav>

    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
